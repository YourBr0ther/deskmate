# DeskMate Production Environment Configuration
# Copy this file to .env.prod and update with your actual values

# Domain Configuration
DOMAIN_NAME=your-domain.com

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here

# LLM Providers
NANO_GPT_API_KEY=your_nano_gpt_api_key_here
NANO_GPT_BASE_URL=https://api.nanogpt.ai/v1
OLLAMA_BASE_URL=http://host.docker.internal:11434

# LLM Configuration
DEFAULT_LLM_MODEL=llama3.2:latest
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=30

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_here_minimum_32_characters_long
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Email/SMTP Configuration for Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=admin@your-domain.com

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_RETENTION_DAYS=30
LOG_RETENTION_DAYS=7

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Performance Tuning
MAX_WORKERS=2
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# Rate Limiting
RATE_LIMIT_ENABLED=true
API_RATE_LIMIT=100  # requests per minute per IP
WEBSOCKET_RATE_LIMIT=60  # messages per minute per connection

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Data Paths (on host system)
DATA_PATH=/opt/deskmate/data
LOG_PATH=/var/log/deskmate
BACKUP_PATH=/opt/deskmate/backups

# Docker Configuration
RESTART_POLICY=unless-stopped
MEMORY_LIMIT_BACKEND=1g
MEMORY_LIMIT_FRONTEND=128m
MEMORY_LIMIT_POSTGRES=512m
MEMORY_LIMIT_QDRANT=512m